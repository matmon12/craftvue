{
  "name": "@craftvue/monorepo",
  "version": "0.0.5",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "------------- Check --------------": "",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "storybook": "pnpm -C apps/docs run storybook",
    "build-storybook": "pnpm -C apps/docs run build-storybook",
    "deploy-storybook": "pnpm run build:all && pnpm run build-storybook",
    "------------- Build --------------": "",
    "build:lib": "pnpm -C packages/craftvue run build",
    "build:lib:prod": "pnpm -C packages/craftvue run build:prod",
    "build:icons": "pnpm -C packages/icons run build",
    "build:playground": "pnpm -C apps/playground run build",
    "build:all": "pnpm run build:lib:prod && pnpm run build:icons",
    "-------------- Dev ---------------": "",
    "dev:lib": "pnpm -C packages/craftvue run dev",
    "dev:icons": "pnpm -C packages/icons run dev",
    "dev:playground": "pnpm -C apps/playground run dev",
    "dev:all": "pnpm run dev:lib && pnpm run dev:icons && pnpm run dev:playground",
    "------------ Publish -------------": "",
    "publish:craftvue:patch": "pnpm -C packages/craftvue run publish:patch",
    "publish:craftvue:minor": "pnpm -C packages/craftvue run publish:minor",
    "publish:craftvue:major": "pnpm -C packages/craftvue run publish:major",
    "publish:icons:patch": "pnpm -C packages/icons run publish:patch",
    "publish:icons:minor": "pnpm -C packages/icons run publish:minor",
    "publish:icons:major": "pnpm -C packages/icons run publish:major",
    "publish:all": "pnpm run publish:icons:patch && pnpm run publish:craftvue:patch"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-storybook": "^9.1.8",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vue": "^3.5.18",
    "vue-tsc": "^3.1.0"
  }
}
