{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["packages/craftvue/src/*"],
      "craftvue": ["packages/craftvue/src/index.ts"],
      "craftvue-dev": ["packages/craftvue/src/index.ts"],
      "icons-dev": ["packages/icons/src/index.ts"],
      "@craftvue/icons": ["packages/icons/src/index.ts"],
      "docs/*": ["apps/docs/src/*"]
    }
  },
  "include": ["packages/*/src/**/*", "apps/*/src/**/*", "env.d.ts", "apps/*/auto-imports.d.ts"],
  "exclude": ["dist", "node_modules", "**/__tests__/*", "**/storybook-static/*"]
}
